@model Note.Models.Notes
@{
    ViewBag.Title = "Создать заметку";
}



    <form asp-action="create" asp-controller="home">
        <div class="form-group">
            <label asp-for="NameNote" class="control-label">Название</label>
            <input type="text" asp-for="NameNote" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Text" class="control-label">Заметка</label>
            <input style="width:70%" type="text" asp-for="Text" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-default" />
        </div>
    </form>
    
